<% if page.current? %>
  <span class="relative inline-flex items-center px-4 py-2 border border-blue-500 bg-blue-500 text-sm font-bold text-white rounded-md shadow-sm">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, {remote: remote, rel: page.rel, class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-blue-50 hover:border-blue-300 rounded-md transition-colors duration-200"} %>
<% end %> 